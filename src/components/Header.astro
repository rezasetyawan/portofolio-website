---
import HeaderLink from "./HeaderLink.astro";
import MobileNav from "./react/MobileNav";

const { pathname } = Astro.url;
---

<header>
  <nav
    class={`flex max-sm:gap-4 sm:justify-between items-center px-4 py-6 text-white sm:px-8 lg:py-8 lg:px-28`}
  >
    <MobileNav pathname={pathname} client:load />
    <h2 class={`font-bold text-xl`}>
      <HeaderLink href="#">rezzawann</HeaderLink>
    </h2>
    <div class="flex items-center gap-4 text-sm max-sm:hidden">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/portofolio">Portofolio</HeaderLink>
      <!-- <HeaderLink href="#">Contact</HeaderLink> -->
    </div>
  </nav>
</header>
